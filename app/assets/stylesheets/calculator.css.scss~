/* Clear floats */
.keys, .screen {overflow: hidden;}

/* Applying same to the keys */
.keys a {
	float: left;
	position: relative;
	top: 0;
	
	cursor: pointer;
	
	width: 64px;
	height: 36px;
	
	background: white;
	border-radius: 3px;
